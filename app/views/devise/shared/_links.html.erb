<%- if controller_name != 'sessions' %>
  Already have an account? <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-small btn-primary mx-2" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-small btn-primary mx-2" %><br />
<% end %>
