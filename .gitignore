# .gitignore

# Ignore bundler config.
/.bundle

# Ignore the default SQLite database.
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore all logfiles and tempfiles.
/log/*
/tmp/*

# Ignore dotenv files.
.env*

# Ignore the public/uploads directory for Active Storage in development
/public/uploads/*

# Ignore .env files containing sensitive information
.env*

# Ignore the database configuration file
/config/database.yml

# Ignore the master key for decrypting credentials and more.
/config/master.key

# Ignore .vscode, .idea, and .DS_Store folders
/.vscode
/.idea
.DS_Store

# Ignore the node_modules directory
/node_modules

# Ignore yarn-error.log and .yarn-integrity files
yarn-error.log
.yarn-integrity

# Ignore coverage reports generated by SimpleCov
/coverage

# Ignore the public/packs directory
/public/packs

# Ignore the yarn error log
yarn-error.log

# Ignore the Gemfile.lock file
Gemfile.lock

# Ignore Spring files
/spring/*.pid
/spring/*.sock

# Ignore public/system files in development
/public/system/*

# Ignore uploaded files in development
/storage/*
!/storage/.keep
